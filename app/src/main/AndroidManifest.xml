<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ggcartoon.yztc.com.ggcartoon"
    android:installLocation="preferExternal">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" />
    <uses-permission android:name="android.permission.DEVICE_POWER" />
    <uses-permission android:name="android.permission.UPDATE_DEVICE_STATS" />
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" />

    <application
        android:name="ggcartoon.yztc.com.APP.ImageLoaderApplication"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="呱呱漫画"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Light.NoTitleBar">
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- android:windowSoftInputMode="adjustPan"软键盘不能自动弹出 -->
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ManHuaXiangQingActivity"
            android:theme="@style/otherPageStyle" />
        <!-- 设置评论activity的主题为透明 -->
        <activity
            android:name=".PingLunListActivity"
            android:theme="@style/otherPageStyle" />
        <activity
            android:name=".ManHuaActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity
            android:name=".SelectActivity"
            android:theme="@style/otherPageStyle" />
        <activity
            android:name=".TypeActivity"
            android:theme="@style/otherPageStyle" />
        <activity
            android:name=".ToolActivity"
            android:theme="@style/otherPageStyle" />
        <activity
            android:name=".LoginAcitivyt"
            android:theme="@style/otherPageStyle" />
        <activity
            android:name=".pulltoreshDemo"
            android:label="@string/title_activity_pulltoresh_demo" />
        <activity
            android:name="ggcartoon.yztc.com.DemoActivity"
            android:label="@string/title_activity_demo" />
    </application>

</manifest>